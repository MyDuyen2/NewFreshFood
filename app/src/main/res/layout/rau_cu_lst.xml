<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imv_HinhRauCu"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cachua"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_TenRauCu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cà chua"
            android:textSize="14sp"
            android:fontFamily="@font/robotoserif"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_KhoiLuongRauCu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250gr"
            android:textSize="14sp"
            android:fontFamily="@font/robotoserif"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txt_GiaRauCu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.000đ"
            android:textSize="14sp"
            android:fontFamily="@font/robotoserif"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imv_YeuThichRauCu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_baseline_favorite_border_24"/>
        <ImageView
            android:id="@+id/imv_GioHangRauCu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_shopping_cart_24"/>


    </LinearLayout>

</LinearLayout>