<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imv_HinhTraiCay"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/taoxanh"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_TenTraiCay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Táo xanh nhập khẩu"
            android:textSize="14sp"
            android:fontFamily="@font/robotoserif"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_KhoiLuongTraiCay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1kg"
            android:textSize="14sp"
            android:fontFamily="@font/robotoserif"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_GiaTraiCay"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="wrap_content"
                android:text="69000"
                android:textSize="14sp"
                android:fontFamily="@font/robotoserif"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/imv_YeuThichTraiCay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_baseline_favorite_border_24"/>
            <ImageView
                android:id="@+id/imv_GioHangTraiCay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_shopping_cart_24"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>