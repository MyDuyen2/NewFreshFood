<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <CheckBox
        android:id="@+id/chb_Item"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="35dp"/>
    <ImageView
        android:id="@+id/imv_Product"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/cachua"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_ProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cà chua"
            android:textSize="14sp"
            android:fontFamily="@font/robotoserif"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txt_ProductMass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250gr"
            android:textSize="14sp"
            android:fontFamily="@font/robotoserif"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txt_ProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.000đ"
            android:textSize="14sp"
            android:fontFamily="@font/robotoserif"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imv_Increase"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_baseline_add_24"
            android:background="@drawable/border"/>
        <TextView
            android:id="@+id/txt_ProductNumb"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:fontFamily="@font/robotoserif"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/imv_Decrease"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_baseline_remove_24"
            android:background="@drawable/border"/>


    </LinearLayout>

</LinearLayout>